<%- include('../partials/header') %>

<section id="show-page">
  <div>DEPARTURE: </div>
  <div><%= flight.departure %></div>
  <div>ARRIVAL: </div>
  <div><%= flight.arrival %></div>
  <div>VFR, MVFR, OR IFR: </div>
  <div><%= flight.vfrOrIfr %></div>
  <div>DESTINATION HAS FUEL? </div>
  <div><%= flight.destinationHasFuel ? 'Yes' : 'No' %></div>
  <!-- start airport list -->
  <div>ENROUTE/ALTERNATES:</div>
  <ul>
    <%- flight.airport.map(p => 
      `<li>${p.enrouteAlternate} <small></small></li>`
    ).join('') %>
  </ul>
  <!-- end airport list -->
</section>
<!-- add to airport form below this comment -->
<form id="add-per-to-airport" action="/flights/<%= flight._id %>/enroutes" method="POST">
  <select name="enrouteId">
    <%- enroutes.map(p => 
      `<option value="${p._id}">${p.enrouteAlternate}</option>`
    ).join('') %>
  </select>
  <button type="submit">ADD TO PLAN</button>
</form>

<h2>REMARKS</h2>
<p>What did we practice today, and how did it go?</p>
<% if (user) {%>
  <form id="add-review-form" method="POST" action="/flights/<%= flight._id %>/reviews">
    <textarea name="remarks"></textarea><br>
    <label>Procedures/Maneuvers</label><br>
    <select name="procedures"><br>
      <option value="n/a">N/A</option>
      <option value="landings">landings</option>
      <option value="slow flight">slow flight</option>
      <option value="steep turns">steep turn</option>
      <option value="stalls">stalls</option>
      <option value="emergency">emergency</option>
    </select>
    <input type="submit" value="ADD REMARKS"/>
  </form>
<%}%>

<% if (flight.reviews.length) { %>
  <table>
    <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Remarks</th>
      <th>Procedures</th>
      <th>Delete</th>
      
    </tr>
    </thead>
    <tbody>
    <% let total = 0 %>
    <% flight.reviews.forEach(function(r) { %>
      <% total += r.review %>
      <tr>
        <td class="review-user"><img src="<%= r.userAvatar %>"><%= r.userName %></td>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.remarks %></td>
        <td><%= r.procedures %></td>
          <% if (user && user._id.equals(r.user)) { %>
            <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
              <button type="submit">X</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }); %>
    <tr>
      <td colspan="3"></td>
      <td><strong><%= (total / flight.reviews.length-1).toFixed(1) %></strong></td>
    </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Remarks Yet</h5>
<% } %>
</body>

<%- include('../partials/footer') %>